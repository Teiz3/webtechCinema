-const loggedInPug = loggedIn

script(defer, src="javascripts/navbar.js")

nav(class="navigation-bar")
  div(class="navigation-bar__container")
    a(class="navigation-bar__button navigation-bar__button--home" href="./") Home
    if !loggedInPug
        div(class="navigation-bar__user")
          a(class="navigation-bar__button navigation-bar__button--login" href="users/login") Login
          a(class="navigation-bar__button navigation-bar__button--signup" href="users/signup") Signup  
    if loggedInPug
      div(class="navigation-bar__user")
        a(class="navigation-bar__button navigation-bar__button--profile" href="users/profile") Profile
        a(class="navigation-bar__button" href="users/logout") Sign Out